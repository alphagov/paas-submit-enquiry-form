<form action="/support" method="POST">
	<%= erb :"partials/_input", :locals => {name: "person_name", label: "Name", hint: "Your Full Name", value: @ticket.person_name, error: errors_for(@ticket, :person_name)} %>
	<%= erb :"partials/_input", :locals => {name: "person_email", label: "Email", hint: "Your Email Address", value: @ticket.person_email, error: errors_for(@ticket, :person_email)} %>
	<%= erb :"partials/_textarea", :locals => {name: "message", label: "Message", hint: "How can we help you?", value: @ticket.message, error: errors_for(@ticket, :message)} %>
	<input type="hidden" name="ga_tracking_id" value="<%= params['ga_tracking_id'] || '' %>" />
	<input type="hidden" name="ga_client_id" value="<%= params['ga_client_id'] || '' %>" />
	<input type="hidden" name="ga_hostname" value="<%= params['ga_hostname'] || '' %>" />
	<input class="button" type="submit">
</form>

