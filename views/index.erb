<script src="/embed.js"></script>
<script type="application/javascript">
	(function(){
		var els = document.getElementsByClassName('example');
		for (var i=0; i<els.length; i++) {
			(function(i){
				var frame = els[i].getElementsByClassName('frame')[0];
				var code = els[i].getElementsByClassName('code')[0];
				var script = [
					'<script src="'+window.location.protocol + '//' + window.location.host +'/embed.js"><\/script>',
					'<iframe id="formframe'+i+'" src="' + window.location.protocol + '//' + window.location.host + frame.innerText + '" style="width:100%" frameborder="0" scrolling="no"><\/iframe>',
					'<script>initForm({}, "#formframe'+i+'")<\/script>',
				].join('\n');
				frame.innerHTML = script;
				code.innerText = script;
				initForm({log: true}, '#formframe'+i);
			})(i);
		}
	})()
</script>
